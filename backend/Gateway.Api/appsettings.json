{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:5173"
    ]
  },

  "ReverseProxy": {
    "Routes": {
      "bff_route": {
        "ClusterId": "bff_cluster",
        "Match": {
          "Path": "/bff/{**catch-all}"
        }
      },
      "auth_public": {
        "ClusterId": "bff_cluster",
        "Match": {
          "Path": "/auth/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/auth"
          },
          {
            "PathPrefix": "/bff/v1/auth"
          }
        ]
      },
      "recipes_public": {
        "ClusterId": "bff_cluster",
        "Match": {
          "Path": "/recipes/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/recipes"
          },
          {
            "PathPrefix": "/bff/v1/recipes"
          }
        ]
      }
    },
    "Clusters": {
      "bff_cluster": {
        "Destinations": {
          "bff_destination": {
            "Address": "http://localhost:7000/"
          }
        }
      }
    }
  }
}
