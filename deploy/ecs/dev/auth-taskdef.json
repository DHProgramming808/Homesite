{
  "family": "homesite-auth-dev",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::373268394585:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "auth",
      "image": "373268394585.dkr.ecr.us-east-1.amazonaws.com/homesite/auth-api:PLACEHOLDER",
      "essential": true,
      "portMappings": [
        { "containerPort": 8080, "protocol": "tcp" }
      ],

      "environment": [],

      "secrets": [
        {
          "name": "ConnectionStrings__DefaultConnection",
          "valueFrom": "arn:aws:ssm:us-east-1:373268394585:parameter/homesite/dev/auth/ConnectionStrings__DefaultConnection"
        },
        {
          "name": "Cors__AllowedOrigins__0",
          "valueFrom": "arn:aws:ssm:us-east-1:373268394585:parameter/homesite/dev/auth/Cors__AllowedOrigins__0"
        },
        {
          "name": "Jwt__Audience",
          "valueFrom": "arn:aws:ssm:us-east-1:373268394585:parameter/homesite/dev/auth/Jwt__Audience"
        },
        {
          "name": "Jwt__Issuer",
          "valueFrom": "arn:aws:ssm:us-east-1:373268394585:parameter/homesite/dev/auth/Jwt__Issuer"
        },
        {
          "name": "Jwt__Key",
          "valueFrom": "arn:aws:ssm:us-east-1:373268394585:parameter/homesite/dev/auth/Jwt__Key"
        },
        {
          "name": "Jwt__RequireHttpsMetadata",
          "valueFrom": "arn:aws:ssm:us-east-1:373268394585:parameter/homesite/dev/auth/Jwt__RequireHttpsMetadata"
        }
      ],

      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/homesite-auth-dev",
          "awslogs-create-group": "true",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
