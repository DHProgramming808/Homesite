{
  "family": "homesite-gateway-dev",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::373268394585:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "gateway",
      "image": "373268394585.dkr.ecr.us-east-1.amazonaws.com/homesite/gateway-api:PLACEHOLDER",
      "essential": true,
      "portMappings": [
        { "containerPort": 8080, "protocol": "tcp" }
      ],
      "environment": [],
      "secrets": [
        {
          "name": "Logging__LogLevel__Microsoft.AspNetCore",
          "valueFrom": "arn:aws:ssm:us-east-1:373268394585:parameter/homesite/dev/gateway/Logging__LogLevel__Microsoft.AspNetCore"
        },
        {
          "name": "Logging__LogLevel__Yarp",
          "valueFrom": "arn:aws:ssm:us-east-1:373268394585:parameter/homesite/dev/gateway/Logging__LogLevel__Yarp"
        },
        {
          "name": "Logging__LogLevel__Yarp.ReverseProxy",
          "valueFrom": "arn:aws:ssm:us-east-1:373268394585:parameter/homesite/dev/gateway/Logging__LogLevel__Yarp.ReverseProxy"
        },
        {
          "name": "ReverseProxy__Clusters__bff_cluster__Destinations__bff_destination__Address",
          "valueFrom": "arn:aws:ssm:us-east-1:373268394585:parameter/homesite/dev/gateway/ReverseProxy__Clusters__bff_cluster__Destinations__bff_destination__Address"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/homesite-gateway-dev",
          "awslogs-create-group": "true",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
